<% layout("/layouts/boilerplate") -%>
<script>
    const mapToken = "<%= process.env.MAP_TOKEN %>";
    const coordinates = <%- JSON.stringify( listings.geometry.coordinates ) %>
</script>
<body>
    
    <div class="row mt-3">
            <div class="col-8 offset-2">
                <h3 class='offset-1'><%= listings.title %></h3>
            </div>
            <div class="card col-4 offset-3 show-card listing-card">
                <img src="<%=listings.image.url %>" class="card-img-top show-image mt-3" alt="listingImage">
                <div class="card-body mt-3">
                  <h5 class="card-text"><b><%= listings.title %></b><br></h5>
                  <h6> Owned By <i><b><%= listings.owner.username %></b></i>  <br></h6>
                  <p><%= listings.description %> <br></p>
                 <p>&#8377;<%= listings.price %> / night <br> </p>
                 <p><%= listings.location %> <br> </p> 
                 <p><%= listings.country %> <br> </p>

                </div>
            </div>
            <% if(currentUser && currentUser._id.equals(listings.owner._id)) { %> 
        <div class="btns">
            <a href="/listings/<%=listings._id %>/edit" class="btn btn-dark edit-btn col-1 offset-2 ">Edit</a>
            <form action="/listings/<%= listings._id %>?_method=DELETE" method="POST">
                <button class="btn btn-dark del-btn offset-4">Delete</button>
            </form>
        </div>
        <% } %>
    
        <% if(currentUser) { %> 
        <div class="mt-3 mb-3 col-8 offset-2 ">
            <hr>
            <h4>Leave a Review</h4>
            <form method="POST" action="/listings/<%= listings._id %>/reviews""  novalidate class="needs-validation">
                <label for="rating" >Rating</label>
                <fieldset class="starability-basic">
                    <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                    <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                    <label for="first-rate1" title="Terrible">1 star</label>
                    <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                    <label for="first-rate2" title="Not good">2 stars</label>
                    <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                    <label for="first-rate3" title="Average">3 stars</label>
                    <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                    <label for="first-rate4" title="Very good">4 stars</label>
                    <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                    <label for="first-rate5" title="Amazing">5 stars</label>
                  </fieldset>
                <div>
                    <label for="comment" class="form-label">Comment</label>
                    <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
                    <div class="invalid-feedback">Please share your stay experience for reviews</div>
                </div>
                <button class="btn btn-dark del-btn offset-4">Add Review</button>
            </form>
            <% } %>
            <% if(listings.reviews.length >0 ){ %>
            <div class="row offset-2">
                <h4 class="mt-3">All Reviews</h4>
                <% for(review of listings.reviews) { %>
                <div class="card col-4 ms-3 mb-3 offset-2">
                    
                    <div class="card-body">
                        <h5 class="card-title">@<%=  review.author.username %></h5>
                        <p class="starability-result" data-rating="<%= review.rating %>">
                            Rated: 3 stars
                        </p>
                        <p class="card-text mb-0"><%= review.comment %></p>
                    </div>
                    <% if(currentUser && currentUser._id.equals(review.author._id)) { %> 
                    <form method="POST" action="/listings/<%= listings._id %>/reviews/<%= review._id%>?_method=DELETE">
                        <button class="btn btn-sm btn-dark mb-2">Delete</button>
                    </form>
                    <% } %>
                </div>
                <% } %>
            </div>
            <% } %>
        </div>
        <div class="col-8 offset-3 mb-3">
            <h3>Where you'll be</h3>
            <div id="map"></div>
            
        </div>
    </div>
   
</body>
<script src="/js/map.js"></script>